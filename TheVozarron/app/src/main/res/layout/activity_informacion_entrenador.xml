<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.uniquindio.android.electiva.thevozarron.activities.InformacionEntrenadorActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_entrenador"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre"
        android:id="@+id/textNombreL"

        android:layout_marginTop="35dp"
        android:layout_below="@+id/foto_entrenador"
        android:layout_alignLeft="@+id/textGeneroL"
        android:layout_alignStart="@+id/textGeneroL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h"
        android:id="@+id/textNombreC"

        android:layout_alignTop="@+id/textNombreL"
        android:layout_alignRight="@+id/foto_entrenador"
        android:layout_alignEnd="@+id/foto_entrenador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/genero"
        android:id="@+id/textGeneroL"

        android:layout_marginTop="31dp"
        android:layout_below="@+id/textNombreL"
        android:layout_alignLeft="@+id/foto_entrenador"
        android:layout_alignStart="@+id/foto_entrenador" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h"
        android:id="@+id/textGeneroC"
        android:layout_alignTop="@+id/textGeneroL"
        android:layout_alignLeft="@+id/textNombreC"
        android:layout_alignStart="@+id/textNombreC" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discipulos"
        android:id="@+id/button"
        android:layout_marginBottom="36dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/historial"
        android:id="@+id/textHistorialL"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textGeneroL"
        android:layout_alignRight="@+id/textNombreL"
        android:layout_alignEnd="@+id/textNombreL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="h"
        android:id="@+id/textHistorialC"
        android:layout_alignBaseline="@+id/textHistorialL"
        android:layout_alignBottom="@+id/textHistorialL"
        android:layout_alignLeft="@+id/textGeneroC"
        android:layout_alignStart="@+id/textGeneroC" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/foto_entrenador"
        android:src="@drawable/ic_home_black_24dp"
        android:layout_x="114dp"
        android:layout_y="121dp"
        android:layout_below="@+id/toolbar_entrenador"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />
</RelativeLayout>
